<link rel="stylesheet" href="<%=asset_url('/assets/widgets.css')%>">

<h2>New Book (widget)</h2>
<p>This form is generated by implemented widget within ruby on rails app.</p>

<div class="container">
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for :book, url: "#", html: {id: "widget_form"} do |form| %>
    <div class="row">
      <div id="errors"></div>
      <div class="col-25">
        <label for="widget_form_title">Title</label>
      </div>
      <div class="col-75">
        <input type="text" id="widget_form_title" name="title" placeholder="Book title" required>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="widget_form_auther">Auther</label>
      </div>
      <div class="col-75">
        <input type="text" id="widget_form_auther" name="auther" placeholder="Book auther" required>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="widget_form_published_at">Published at</label>
      </div>
      <div class="col-75">
        <input type="datetime-local" id="widget_form_published_at" name="published_at" required>
      </div>
    </div>
    <div class="row">
      <%= form.submit %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  function handleSubmit(event) {
    console.log("form submitting")
    event.preventDefault();

    const data = new FormData(event.target);

    const form_data = Object.fromEntries(data.entries());

    console.log(form_data);

    fetch("<%=books_url%>", {
      method: 'POST',
      headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
      },
      body: JSON.stringify({book: form_data})
    })
    .then(response => response.json())
    .then(response => {
      console.log(response)
      if(response.code==200){
        document.getElementById("widget_form").innerHTML = "Data submitted successfully"
      }else{
        document.getElementById("errors").innerHTML = response.errors
      }
    })
  }

  const form = document.getElementById('widget_form');
  form.addEventListener('submit', handleSubmit);
    

</script>